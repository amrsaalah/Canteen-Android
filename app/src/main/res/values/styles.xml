<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="TextInputLayoutStyle" parent="Widget.Design.TextInputLayout">

        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textSize">@dimen/sp14</item>

    </style>


    <style name="EditTextStyle" parent="TextAppearance.AppCompat">

        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textColor">#777</item>
        <item name="android:textColorHint">#444</item>
        <item name="android:backgroundTint">@color/colorAccent</item>

    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/dp16</item>
        <item name="android:textColor">#8881</item>
        <item name="rippleColor">#000</item>
        <item name="cornerRadius">@dimen/dp4</item>
        <item name="android:shadowColor">#123</item>
        <item name="backgroundTint">#666123</item>
        <item name="android:elevation">@dimen/dp4</item>
    </style>


    <style name="TextButtonStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textColor">@color/blue</item>
    </style>

</resources>
